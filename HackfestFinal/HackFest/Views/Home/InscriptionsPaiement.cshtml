@model HackFest.Models.Paiement
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = null;
    System.Globalization.CultureInfo _culture = @System.Globalization.CultureInfo.CurrentUICulture;
}

<!DOCTYPE html>
<html>
<head>
    <title>@Localizer["Titre"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <style>
        body {
            text-align: center;
        }
        ul {
            text-align: left;
            list-style-type: none;
            display: inline-block;
        }

        li {
            display: inline-block;
        }

    </style>
</head>
<body>
    <ul>
        <li><a href="InscriptionsPaiement?culture=en-US">EN-US</a></li>
        <li><a href="InscriptionsPaiement?culture=fr-CA">FR-CAD</a></li>
    </ul>
    <h1>@Localizer["Titre"]</h1>
    <p>@Localizer["Information"]</p>

    <form class="m-1 p-1" asp-action="Inscriptions" method="post">
        <div class="panel-body" id="form" style="height:50px">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Participant.Prenom">@Localizer["Prenom"] </label>
                <div><span asp-validation-for="Participant.Prenom" class="text-danger"></span></div>
                <input asp-for="Participant.Prenom" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Montant">@Localizer["Montant"] </label>
                <div><span asp-validation-for="Montant" class="text-danger"></span></div>
                <input asp-for="Montant" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateReceptionPaiement">@Localizer["Date"]</label>
                <div><span asp-validation-for="DateReceptionPaiement" class="text-danger"></span></div>
                <input asp-for="DateReceptionPaiement" type="date" asp-format="{0:d}" class="form-control" />
            </div>
            <div class="text-center">
                <input class="btn btn-success" type="submit" value="go" />
            </div>
        </div>
    </form>
</body>
</html>
